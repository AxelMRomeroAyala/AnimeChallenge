<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customlvlselbuttom"
        android:background="@drawable/lvlbutton" >

        <TextView
            android:id="@+id/lvlsellvlname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            />
        
        <ProgressBar
            android:id="@+id/lvlsellvlpbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lvlsellvlname"
            android:paddingTop="10dp"/>

        <ImageView
            android:id="@+id/lvlsellvlstar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/starempty"
            android:layout_toRightOf="@+id/lvlsellvlpbar"
            android:paddingRight="20dp"
            android:maxHeight="20dp"
            android:maxWidth="200dp"
            android:layout_centerVertical="true"
            />
            

    </RelativeLayout>
