<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stats_level_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/statslvlmoviesframe"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/stats_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">


        <TextView
            android:id="@+id/stats_level_name"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="Level 4"/>

        <TextView
            android:id="@+id/stats_level_score"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="15000"/>

        <ImageView
            android:id="@+id/stats_level_star"
            android:layout_width="0px"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/dummy_content"
            android:src="@drawable/threestars"
            tools:src="@drawable/starempty" />

        <TextView
            android:id="@+id/stats_level_star_string"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/zero"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:gravity="end"
            android:paddingEnd="5dp"
            android:maxLines="1"
            android:paddingRight="5dp"
            tools:text="10/10/10"/>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/stats_level_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/stats_content"
        tools:progress="50" />


</RelativeLayout>
